<div class="container">



  <form action="/addtokit" method="post" class="form-horizontal" class="col-md-6">


    <div class="form-group">
      <label for="category" class="col-sm-2">CATEGORY</label>
      <select id="category" name="category">
        <option value="none">~~~PLEASE SELECT YOUR CATEGORY~~~</option>
        <option value="skincare">Skincare</option>
        <option value="face">Face</option>
        <option value="eyes">Eyes</option>
        <option value="lips">Lips</option>
      </select>
    </div>

  <div class="form-group">
    <label for="product" class="col-sm-2">PRODUCT</label>
     <br></br>
      <input type="text" class="form-control" name="product" placeholder="What is it?">
  </div>


  <div class="form-group">
    <label for="brand" class="col-sm-2">BRAND</label>
      <input type="text" class="form-control" name="brand" placeholder="What is the name?" />
     <br></br>
   </div>

  <div class="form-group">
    <label for="brand" class="col-sm-2">NAME</label>
     <br></br>
      <input type="text" class="form-control" name="name" placeholder="What is the name?">
  </div>


   <div class="form-group">
      <label for="brand" class="col-sm-2">DESCRIPTION</label>
       <br></br>
        <input type="text" class="form-control" name="description" placeholder="Describe your product!">
   </div>


   <div class="form-group">
       <label for="brand">STORE</label>
        <br></br>

         <input type="text" class="form-control" name="store" placeholder="Where did you buy it?">
    </div>



     <div class="form-group">
       <label for="brand">PURCHASE DATE</label>
        <br></br>

         <input type="text" class="form-control" name="purchasedate" placeholder="When did you buy it?">
    </div>



     <div class="form-group">
       <label for="brand">EXPIRATION DATE</label>
        <br></br>

         <input type="text" class="form-control" name="expirationdate" placeholder="When does it expire?">

    </div>



    <div class="col-xs-3">
      <p><h5><strong>PRODUCT IMAGE</strong></h5></p>
      <label class="file">
        <input type="file" id="inputFileToLoad" onchange="readURL(this)" >
        <input type="hidden" id="myImage" name="image" value="">
       <span class="file-custom"></span><button type="button" class="btn btn-primary btn-xs">Upload</button>
      </label>
    </div>

  <div class="col-xs-3">
    <label for="web_URL">WEB URL</label>
    <input type="text" name="weblink" placeholder="Add web URL"><a class="btn btn-primary" href="#" role="button">Link</a>
  </div>


    <div class="col-xs-3">
      <p><h5><strong>PRICE</strong></h5></p>
        <label class="sr-only" for="inputAmount">Amount</label>
        <div class="input-group">
          <div class="input-group-addon">$</div>
          <input type="text" class="form-control" name="price" placeholder="Amount">
          <div class="input-group-addon">.00</div>
        </div>
    </div>







            <button type="submit" class="btn btn-secondary btn-med">Add item</button>


      <a href="/mykit/all"><button type="weblink" class="btn btn-primary btn-lrg">Check out your beauty kit!</a></button>

      <!-- <p>
        Click <a href="/mykit/all"> here </a> to check out your MakUpKit
      </p> -->




    </form>
  </div>
